<h1>Send a new message</h1>

<%= form_for(@notification) do |f| %>
  <%= render 'shared/error_messages' %>
  <div class="field">
    <%= f.label :message %><br />
    <%= f.text_area :message %><br />
    <span class="chars-left"></span>
  </div>
  <div class="actions">
    <%= f.submit "Send Message" %>
  </div>
<% end %>

<%= link_to 'Back', notifications_path %>
